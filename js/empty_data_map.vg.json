{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Suburban Median House Prices (2022)",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 40000,
      "bind": {
        "input": "range",
        "min": 20000,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
          "input": "range",
          "min": 2012,
          "max": 2022,
          "step": 1,
          "name": "Year:  "
      }
  }
  ],
  
  "projection": {
    "type": "mercator",
    "center": [144.95, -37.83],
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {"data": {
      "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
      "format": {
        "type": "topojson",
        "feature": "suburb-2-vic"
      }
    },
    "mark": {
      "type": "geoshape",
      "fill": "#ddd",
      "stroke": "#fff",
      "strokeWidth": 1
    },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.vic_loca_2",
          "as": "note"
        }
      ],
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/master/data/median-house-price-long.csv"
      },
      "transform": [
        {
          "lookup": "locality",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
              "format": {
                "type": "topojson",
                "feature": "suburb-2-vic"
              }
            },
            "key": "properties.vic_loca_2"
           
          },
          "as": "geo"
          
        },
        { "filter": "datum.year == Year_selection" }
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "shape": {"field":"geo",  "type":"geojson"},
        "color": {
          "field": "median",
          "type": "quantitative",
          "legend": {
            "format": "$,.0f"
          },
          "bin": {"steps": [1000000], "maxbins": 8, "extent":[0, 6500000]},
          "scale": {
            "type": "bin-ordinal",
            "scheme": {"name": "goldred", "count": 16}
          },
          "title": "Price ($)"
        },
        "tooltip": [
          {
            "field": "locality",
            "type": "nominal",
            "title": "Suburb"
          },
          {
            "field": "median",
            "type": "quantitative",
            "format": "$,.0f"
          },
          { "field": "year", "type": "nominal", "title": "Year" }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/master/data/median-house-price-long.csv"
      },
      "transform": [
        {
          "lookup": "locality",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
              "format": {
                "type": "topojson",
                "feature": "suburb-2-vic"
              }
            },
            "key": "properties.vic_loca_2"
           
          },
          "as": "geo"
          
        },
        { "filter": "datum.year == Year_selection" }
      ],

      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {}}
  ],
  "config": {
    "scale": {},
    "range": {}
  }

}