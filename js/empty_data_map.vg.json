{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Suburban Median House Prices (2022)",
  "width": "container",
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
    "format": {
      "type": "topojson",
      "feature": "suburb-2-vic"
    }
  },


  "params": [
    {
      "name": "zoom_level",
      "value": 1400,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 60000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
          "input": "range",
          "min": 2010,
          "max": 2023,
          "step": 1,
          "name": "Year:  "
      }
  }
  ],
  
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.vic_loca_2",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/master/data/median-house-price-long.csv"
            },
            "key": "locality",
            "fields": [
              "median",
              "year"
            ]
          }
          
        },
        { "filter": "datum.year == Year_selection" }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "median",
          "type": "quantitative",
          "legend": {
            "format": "$,.0f"
          },
          "scale": {
            "scheme": "reds",
            "bins":{"step": 500000},
            "domain": [
              500000,
              
              6000000
            ],
            "range": [
              "#fdbe85",
              "#fd8d3c",
              "#e6550d",
              "#a63603",
              "#641E16"
            ]
          },
          "title": "Price ($)"
        },
        "tooltip": [
          {
            "field": "properties.vic_loca_2",
            "type": "nominal",
            "title": "Suburb"
          },
          {
            "field": "median",
            "type": "quantitative",
            "format": "$,.0f"
          },
          { "field": "datum.year", "type": "temporal", "title": "Year" }
        ]
      }
    }
  ]
}