{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Suburban Median House Prices (2022)",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 60000,
      "bind": {
        "input": "range",
        "min": 50000,
        "max": 80000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2012,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    },
    {
      "name": "show_top_five",
      "value": true,
      "bind": {
        "input": "checkbox",
        "name": "Show Top 5 Most Expensive Suburbs: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [
      144.95,
      -37.83
    ],
    "scale": {
      "expr": "zoom_level"
    }
  },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
        "format": {
          "type": "topojson",
          "feature": "suburb-2-vic"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.vic_loca_2",
          "as": "note"
        }
      ],
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/master/data/median-house-price-long.csv"
      },
      "transform": [
        {
          "lookup": "locality",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leanne-b/homework-5/main/js/suburb-2-vic.json",
              "format": {
                "type": "topojson",
                "feature": "suburb-2-vic"
              }
            },
            "key": "properties.vic_loca_2"
          },
          "as": "geo"
        },
        {
          "filter": "datum.year == Year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "median",
          "type": "quantitative",
          "legend": {
            "format": "$,.0f"
          },
          "bin": {
            "steps": [
              1000000
            ],
            "maxbins": 8,
            "extent": [
              0,
              6500000
            ]
          },
          "scale": {
            "type": "bin-ordinal",
            "scheme": {
              "name": "orangered",
              "count": 16
            }
          },
          "title": "Price ($)"
        },
        "tooltip": [
          {
            "field": "locality",
            "type": "nominal",
            "title": "Suburb"
          },
          {
            "field": "median",
            "type": "quantitative",
            "format": "$,.0f"
          },
          {
            "field": "year",
            "type": "nominal",
            "title": "Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/topten/data/top-5-suburbs-year.csv"
      },
      "transform": [
        {
          "lookup": "Suburb",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/topten/data/vic-suburbs-latlong.csv"
            },
            "key": "locality",
            "fields": [
              "lat",
              "long"
            ]
          }
        },
        {
          "filter": "datum.Year == Year_selection"
        }
      ],
      "encoding": {
        "longitude": {
          "field": "long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        }
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "color": "black"
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": -0,
            "dx": -10,

            "color": "black",
            "align":"right",
            "fontWeight":"bold"
          },
          "encoding": {
            "text": {
              "field": "Suburb",
              "type": "nominal"
              
            },
            "opacity": {
              "condition": {
                "param": "show_top_five",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    }
    
  ],
  "config": {
    "scale": {},
    "range": {}
  }
}