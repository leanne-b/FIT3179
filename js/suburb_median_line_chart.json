{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Median House Prices Over Time",
    "data": {
        "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/topten/data/median-house-price-long.csv"
    },
    "title": {
        "text": {
            "expr": "suburb + ' Median House Prices'"
        }
    },
    "width": "container",
    "params": [
        {
            "name": "suburb",
            "value": "ABBOTSFORD",
            "bind": {
                "input": "select",
                "options": [
                    "ARMADALE",
                    "BRIGHTON",
                    "CANTERBURY",
                    "DEEPDENE",
                    "EAST MELBOURNE",
                    "MALVERN",
                    "MIDDLE PARK",
                    "TOORAK"
                ],
                "labels": [
                    "ARMADALE",
                    "BRIGHTON",
                    "CANTERBURY",
                    "DEEPDENE",
                    "EAST MELBOURNE",
                    "MALVERN",
                    "MIDDLE PARK",
                    "TOORAK"
                ],
                "name": "Suburb: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.locality==suburb"
        },
        {
            "filter": {
                "field": "year",
                "gte": {
                    "year": 2012
                }
            }
        },
        {
            "filter": {
                "field": "year",
                "lt": {
                    "year": 2023
                }
            }
        }
    ],
    
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "median",
            "type": "quantitative",
            "title": "Median Price",
            "axis": {
                "format": "$,.0f"
            }
        },
        "tooltip": [
            {
                "field": "year",
                "type": "temporal",
                "title": "Year",
                "format": "%Y"
            },
            {
                "field": "median",
                "type": "quantitative",
                "title": "Price",
                "format": "$,.0f"
            }
        ]
    },
    
    "layer": [
        {"mark": {
            "type": "line",
    
            "color": "red",
            "clip": false
        },
        "encoding": {
            "x": {
                "field": "year",
                "type": "temporal",
                "aggregate": "min"
            },
            "y": {
                "field": "median",
                "type": "quantitative",
                "aggregate": {
                    "argmin": "year"
                }
            }
        }},
        {
            "transform": [
                {
                    "filter": {
                        "field": "year",
                        "gt": 2012
                    }
                },
                {
                    "filter": {
                        "field": "year",
                        "lt": {
                            "year": 2013
                        }
                    }
                }
            ],
           
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "color": "black",
                        "size": 12,
                        "align":"left",
                        "fontWeight":"bold",
                        "yOffset": 20,
                        "xOffset": 20
                    },
                    "encoding": {
                        "text": {
                            "field": "median",
                            "type": "quantitative",
                            "format": "$,"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "circle",
                        "color": "black",
                        "size": 50
                    }
                }
            ]
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/leanne-b/FIT3179/topten/data/median-house-price-long.csv"
            },
            "transform": [
                {
                    "filter": "datum.locality==suburb"
                },
                {
                    "filter": {
                        "field": "year",
                        "equal": {
                            "year": 2022
                        },
                        "timeUnit": "year"
                    }
                }
            ],
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "temporal"
                },
                "y": {
                    "field": "median",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "color": "black",
                        "size": 12,
                        "align":"left",
                        "fontWeight":"bold",
                        "yOffset": 40,
                        "xOffset": -10
                        
                    },

                    "encoding": {
                        "text":{ "field": "mean","type":"quantitative", "format":"$,0f","value": {"expr": "datum.median + 'A string 2012'"} }
                       
                    }
                },
                {
                    "mark": {
                        "type": "circle",
                        "color": "black",
                        "size": 50
                    }
                }
            ]
        }
    ]
}